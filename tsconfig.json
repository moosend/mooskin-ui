{
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "declarationDir": "lib",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "noUnusedLocals": true
  },
  "include": [
    "components",
    "playground"
  ],
  "exclude": [
      "node_modules",
      "components/**/*.spec.ts",
      "components/**/*.spec.tsx"
  ]
}